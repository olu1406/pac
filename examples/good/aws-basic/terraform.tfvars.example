# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

# Environment configuration
environment  = "dev"
project_name = "secure-example"

# Network configuration
vpc_cidr = "10.0.0.0/16"

# IMPORTANT: Replace these with your actual IP ranges for security
# These are RFC 5737 documentation ranges and should not be used in production
allowed_ssh_cidr = "203.0.113.0/24"  # Replace with your office/home IP range
allowed_rdp_cidr = "203.0.113.0/24"  # Replace with your office/home IP range

# S3 configuration - must be globally unique
s3_bucket_prefix = "your-org-secure-example"  # Replace with your organization prefix

# Feature toggles
enable_flow_logs  = true
enable_cloudtrail = true

# Resource tagging
tags = {
  Environment = "dev"
  Project     = "secure-example"
  Owner       = "platform-team"
  ManagedBy   = "terraform"
  CostCenter  = "engineering"
}